@model QuizModel
@{
    ViewData["Title"] = "Home Page";
}

<style>


        .custom-div {
            width: 90%;
            max-width: 1200px; /* Set a max-width if needed */
            min-height: 200px;
            background-color: lightgray;
            padding: 20px;
            margin-top: 10px;
            box-sizing: border-box;
        }

    .custom-div {
        width: 90%;
        max-width: 1200px; /* Set a max-width if needed */
        min-height: 200px;
        background-color: lightgray;
        padding: 10px;
        box-sizing: border-box;
        display: flex;
        justify-content: left;
        border-radius: 5px;
    }

    .bordered-div {
        border: 2px solid #000; /* Set your desired border width and color */
        border-radius: 10px;
        margin-right: 5px;
        }

    .fade-container {
        padding: 5px;
        max-height: 200px; /* Set your desired max height */
        max-width: 300px; /* Set your desired max width */
        overflow: hidden;
        background-color: darkgray;
        position: relative;
        word-wrap: break-word; /* Break words into a new line if they exceed the width */
        -webkit-mask-image: linear-gradient(180deg, black 70%, transparent);
        border-radius: 8px;
    }

    </style>


<h2>Enter Quiz Name</h2>
<form method="post" action="/SearchQuiz/LoadQuiz">
    <input type="text" name="quizTitle" />
    <button type="submit">Load Quiz</button>
</form>

<div class="custom-div">

    <div class="bordered-div">
        <div class="fade-container">
            <h1>Title</h1>
            <p>Question1</p>
            <p>Question2</p>
            <p>Question3</p>
            <p>Question4</p>
        </div>
    </div>
    
    

</div>
